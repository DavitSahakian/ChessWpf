<Window x:Class="WpfView.FigureChoose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfView"
        mc:Ignorable="d"
        Title="FigureChoose" Height="200" Width="530" Closing="Window_Closing">
    <Grid>
        <Image x:Name="Queen" HorizontalAlignment="Left" Height="100" Margin="25,49,0,0" VerticalAlignment="Top" Width="100" Grid.RowSpan="2" Source="image\WQueen.png" MouseLeftButtonDown="Queen_MouseLeftButtonDown"/>
        <Image x:Name="Rook" HorizontalAlignment="Left" Height="100" Margin="140,49,0,0" VerticalAlignment="Top" Width="100" Grid.RowSpan="2" Source="image\WRook.png" MouseLeftButtonDown="Rook_MouseLeftButtonDown"/>
        <Image x:Name="Bishop" HorizontalAlignment="Left" Height="100" Margin="280,49,0,0" VerticalAlignment="Top" Width="100" Grid.RowSpan="2" Source="image\WBishop.png" MouseLeftButtonDown="Bishop_MouseLeftButtonDown"/>
        <Image x:Name="Knight" HorizontalAlignment="Left" Height="100" Margin="405,49,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="100" Source="image\WKnight.png" MouseLeftButtonDown="Knight_MouseLeftButtonDown"/>
    </Grid>
</Window>
